<!DOCTYPE html>
<html>
  <head>
    <title>Velours</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <%= javascript_importmap_tags %>

    <!-- Log de debug pour v√©rifier chargement du script OneSignal -->
    <script>console.log('OneSignal script loaded - HEAD');</script>
    <!-- OneSignal pour PWA iOS : version service worker -->
    <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async></script>
    <script>
      window.OneSignalDeferred = window.OneSignalDeferred || [];
      OneSignalDeferred.push(async function(OneSignal) {
        console.log('OneSignalDeferred callback appel√©');
        await OneSignal.init({
          appId: "12a609ee-318e-4423-8e34-062dc14bb6e9",
          safari_web_id: "web.onesignal.auto.570f8921-edd7-49b2-93d5-7301d9209087",
          notifyButton: { enable: true },
          serviceWorkerPath: "OneSignalSDKWorker.js"
        });
      });
    </script>
  </head>

  <body>
    <script>console.log('HTML body loaded');</script>
    <%= render 'layouts/header' %>

    <div id="notif-debug-message" style="position:fixed;top:0;left:0;width:100vw;z-index:10000;background:#fff3cd;color:#8B1538;font-weight:bold;padding:6px 0;text-align:center;font-size:15px;box-shadow:0 2px 8px rgba(0,0,0,0.08);">Chargement JS‚Ä¶</div>

    <button id="enable-notifications-btn" style="position:fixed; bottom:2em; left:50%; transform:translateX(-50%); z-index:2147483647 !important; background:#ffeb3b !important; color:#d32f2f !important; border:5px solid red !important; border-radius:22px; padding:0.7em 2em; font-size:1.1em; font-weight:700; box-shadow:0 4px 18px rgba(0,0,0,0.18); display:block !important; opacity:1 !important; pointer-events:auto !important;">üîî Activer les notifications (DEBUG)</button>
    <div id="notif-debug-iphone" style="position:fixed; bottom:0.5em; left:50%; transform:translateX(-50%); z-index:2147483647; background:#fff; color:#d32f2f; font-weight:bold; padding:0.5em 1.5em; border-radius:16px; font-size:1em; box-shadow:0 2px 8px rgba(0,0,0,0.08);">Debug iPhone‚ÄØ: le bouton est-il visible‚ÄØ? Clique dessus et regarde la console JS.</div>

    <div id="flash-container" class="flash-container">
      <% flash.each do |type, message| %>
        <div class="flash-message <%= type %>">
          <%= message %>
        </div>
      <% end %>
    </div>

    <main class="container">
      <%= yield %>
    </main>

    <div id="modal-backdrop" class="modal-backdrop"></div>

    <script>
      document.addEventListener('turbo:load', () => {
        // --- Debug permanent en haut de page ---
        const notifDebug = document.getElementById('notif-debug-message');
        if (notifDebug) notifDebug.textContent = 'JS ex√©cut√©, attente OneSignal‚Ä¶';
        console.log('JS turbo:load ex√©cut√©');

        // --- Flash message handler ---
        const flashMessages = document.querySelectorAll('.flash-message');

        if (flashMessages.length > 0) {
          flashMessages.forEach((message, index) => {
            // Stagger the animation for multiple messages
            setTimeout(() => {
              message.classList.add('show');
            }, index * 100);

            // Hide after 2.5 seconds (giving a bit more time for the animation)
            setTimeout(() => {
              message.classList.remove('show');
              // Optional: remove from DOM after transition
              setTimeout(() => {
                if (message.parentElement) {
                  message.parentElement.removeChild(message);
                }
              }, 500); // Wait for fade-out transition
            }, 2500 + (index * 100));
          });
        }

        // --- Modal handler ---
        const modal = document.getElementById('scenario-modal');
        const backdrop = document.getElementById('modal-backdrop');

        // Listen for form submission inside the modal
        const scenarioForm = document.getElementById('passion-scenario-form');
        if (scenarioForm) {
          scenarioForm.addEventListener('submit', function() {
            closeModal();
          });
        }

        // Affiche le bouton d‚Äôactivation OneSignal sur mobile si la cloche n‚Äôest pas visible
        function isMobile() {
          return /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
        }
        const notifBtn = document.getElementById('enable-notifications-btn');
        const notifDebugIphone = document.getElementById('notif-debug-iphone');
        if (notifBtn) {
          notifBtn.style.opacity = '1';
          notifBtn.style.pointerEvents = 'auto';
          notifBtn.style.display = 'block';
          notifBtn.style.background = '#ffeb3b';
          notifBtn.style.color = '#d32f2f';
          notifBtn.style.zIndex = '2147483647';
          notifBtn.style.border = '5px solid red';
          notifBtn.style.outline = '4px solid #d32f2f';
          notifBtn.disabled = false;
          if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] Bouton visible, pr√™t √† cliquer.';
          console.log('[DEBUG] Bouton notifications d√©tect√© et forc√© visible');

          // Ajoute un span pour afficher le statut de permission (debug)
          let debugSpan = document.getElementById('notif-permission-debug');
          if (!debugSpan) {
            debugSpan = document.createElement('span');
            debugSpan.id = 'notif-permission-debug';
            debugSpan.style.marginLeft = '8px';
            debugSpan.style.fontSize = '12px';
            debugSpan.style.color = '#b22222';
            notifBtn.parentNode.insertBefore(debugSpan, notifBtn.nextSibling);
          }

          function updateDebugPermission() {
            if (window.OneSignal && OneSignal.getNotificationPermission) {
              OneSignal.getNotificationPermission().then(function(permission) {
                debugSpan.textContent = 'Permission: ' + permission;
                if (permission === 'granted' || permission === 'denied') {
                  notifBtn.style.display = 'none';
                  if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] Permission: ' + permission + ' (bouton cach√©)';
                } else {
                  notifBtn.style.display = 'block';
                  if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] Permission: ' + permission + ' (bouton visible)';
                }
              });
            } else {
              debugSpan.textContent = 'Permission: inconnu (OneSignal non charg√©)';
              notifBtn.style.display = 'block';
              if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] OneSignal non charg√©.';
            }
          }

          notifBtn.addEventListener('click', function() {
            if (notifDebug) notifDebug.textContent = 'Bouton notifications cliqu√© (handler JS appel√©)';
            if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] Clic sur bouton notifications';
            console.log('[DEBUG] Clic sur bouton notifications');
            if (window.OneSignal && OneSignal.showSlidedownPrompt) {
              OneSignal.showSlidedownPrompt();
              if (notifDebug) notifDebug.textContent = 'Demande de permission OneSignal envoy√©e.';
              if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] Demande de permission OneSignal envoy√©e.';
            } else {
              if (notifDebug) notifDebug.textContent = 'Erreur: OneSignal non charg√©.';
              if (notifDebugIphone) notifDebugIphone.textContent = '[DEBUG] Erreur: OneSignal non charg√©.';
              alert('Erreur: OneSignal non charg√©.');
            }
          });

          updateDebugPermission();

          window.OneSignalDeferred = window.OneSignalDeferred || [];
          OneSignalDeferred.push(function(OneSignal) {
            OneSignal.on('notificationPermissionChange', function(permission) {
              updateDebugPermission();
            });
          });
        }
      });
    </script>
    <button id="test-iphone-btn" style="position:fixed; bottom:5em; left:50%; transform:translateX(-50%); z-index:2147483647 !important; background:#2ecc40 !important; color:#fff !important; border:4px solid #111 !important; border-radius:22px; padding:1em 2.5em; font-size:1.3em; font-weight:900; box-shadow:0 4px 18px rgba(0,0,0,0.18); display:block !important; opacity:1 !important; pointer-events:auto !important;">BOUTON TEST IPHONE</button>
    <script>
      document.getElementById('test-iphone-btn').onclick = function() {
        alert('BOUTON TEST CLIQU√â');
      };
    </script>
  </body>
</html>
