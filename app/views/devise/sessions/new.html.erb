<div class="auth-container">
  <h1 class="auth-title">ðŸŒ¹ Connexion</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group" style="display: flex; justify-content: center; align-items: center; margin-bottom: 2rem;">
        <label class="remember-toggle-btn">
          <%= f.check_box :remember_me, {style: 'display:none;'}, true, false %>
          <span class="custom-toggle-btn"></span>
          <span class="remember-label">Se souvenir de moi</span>
        </label>
      </div>
    <% end %>

    <div style="text-align: center;">
      <%= f.submit "Se connecter", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
